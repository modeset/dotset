#!/bin/bash

if [[ "$1" == "-h" || "$1" == "--help" || "$1" == "help" ]]; then cat <<HELP
Search dochub.io for terms associated with css, html, javascript, DOM, or jQuery section:

Usage: $(basename "$0") [section] [term]

Example: $(basename "$0") css background-image
Example: $(basename "$0") html heading
Example: $(basename "$0") javascript math
Example: $(basename "$0") dom element
Example: $(basename "$0") jquery hasClass
HELP
exit; fi

open "http://dochub.io/#$1/${@:2}"
