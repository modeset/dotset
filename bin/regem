#!/bin/bash

if [[ "$1" == "-h" || "$1" == "--help" || "$1" == "help" ]]; then cat <<HELP
Reinstalls global gems and macvim after a ruby upgrade:

Usage: $(basename "$0")
HELP
exit; fi

rbenv rehash
gem install rbenv-rehash --no-ri --no-rdoc
gem install bundler --no-ri --no-rdoc
gem install CoffeeTags --no-ri --no-rdoc
gem install gemcutter --no-ri --no-rdoc
gem install heroku --no-ri --no-rdoc
gem install mustache --no-ri --no-rdoc
gem install powder --no-ri --no-rdoc
gem install rack --no-ri --no-rdoc
gem install redcarpet --no-ri --no-rdoc
gem install sass --no-ri --no-rdoc
brew upgrade
brew uninstall macvim
brew install macvim
rbenv rehash
